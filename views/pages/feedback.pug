extends ../base_template
block content
    form(method='POST' action='/feedback/', id="mailForm")
        div.form-group
            label(for='subject') Subject:
            input#subject.form-control(type='text', placeholder='Type subject...' name='subject')
        div.form-group
            label(for='email') Your Email:
            input#email.form-control(type='email', placeholder='Type email...' name='email')
        div.form-group
            label(for='message') Message:
            textarea#message(name="message", form="mailForm")
        button(type='submit') Send Message